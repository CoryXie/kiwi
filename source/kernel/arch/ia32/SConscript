import os

Import('env', 'envmgr', 'sources')

# Set IA32-specific compilation flags.
env['ASFLAGS'] += ['-m32']
env['CCFLAGS'] += ['-m32', '-fno-omit-frame-pointer', '-march=i686']
env['LDFLAGS'] += ['-b', 'elf32-i386', '-m', 'elf_i386']

# We need to link the kernel with libgcc, and force some symbols from it to be
# linked in.
env['LDFLAGS'] += [os.popen('%s -print-libgcc-file-name' % envmgr.base['CC']).read().strip()]
env['LDFLAGS'] += ['--undefined=__moddi3', '--undefined=__divdi3']

# Pull in x86 common code.
SConscript(dirs=['../common/x86'], exports=['env', 'sources'])

# Add source files.
sources += [
	File('arch.c'),
	File('boot.S'),
	File('context.c'),
	File('descriptor.c'),
	File('elf.c'),
	File('entry.S'),
	File('kdbg.c'),
	File('page.c'),
	File('switch.S'),
	File('thread.c'),
]
